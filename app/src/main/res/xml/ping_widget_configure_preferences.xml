<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="Widget settings"/>
    <EditTextPreference
        android:key="@string/fragment_widget_configure_address_key"
        android:title="@string/fragment_widget_configure_address_title"
        android:summary="@string/fragment_widget_configure_address_summary"
        android:inputType="text|textEmailAddress"
        android:defaultValue="@string/fragment_widget_configure_address_summary"/>
    <ListPreference
        android:key="@string/fragment_widget_configure_interval_key"
        android:title="@string/fragment_widget_configure_interval_title"
        android:summary="%s"
        android:entries="@array/pingInterval"
        android:entryValues="@array/pingIntervalEntries"
        android:defaultValue="1"/>
    <ListPreference
        android:key="@string/fragment_widget_configure_max_pings_key"
        android:title="@string/fragment_widget_configure_max_pings_title"
        android:summary="%s"
        android:entries="@array/maxPings"
        android:entryValues="@array/maxPingsEntries"
        android:defaultValue="15"/>
    <SwitchPreference
        android:key="@string/fragment_widget_show_chart_lines_key"
        android:title="@string/fragment_widget_show_chart_lines_title"
        android:defaultValue="true"/>
    <SwitchPreference
        android:key="@string/fragment_widget_dark_theme_key"
        android:title="@string/fragment_widget_dark_theme_title"
        android:defaultValue="false"/>
    <ve.com.abicelis.pingwidget.app.preference.ThemePreference
        android:key="@string/fragment_widget_configure_theme_key"
        android:title="@string/fragment_widget_configure_theme_title"
        android:summary="@string/widget_theme_summary_blue_yellow"/>


    <PreferenceCategory android:title="About"/>
    <Preference
        android:key="@string/fragment_widget_configure_about_key"
        android:title="@string/app_name"
        android:summary="@string/fragment_widget_configure_about_summary"/>
    <Preference
        android:key="@string/fragment_widget_configure_rate_key"
        android:title="@string/fragment_widget_configure_rate_title"
        android:summary="@string/fragment_widget_configure_rate_summary"/>
    <Preference
        android:key="@string/fragment_widget_configure_contact_key"
        android:title="@string/fragment_widget_configure_contact_title"
        android:summary="@string/fragment_widget_configure_contact_summary"/>
</PreferenceScreen>